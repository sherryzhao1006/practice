010=2

=============
    public int findMissing(int[] nums) {
        if(nums == null || nums.length == 0) {
            return -1;
        }

        int missNum = nums[0];
        for(int i=1; i < nums.length; i++) {
            missNum = missNum ^ nums[i];
        }
        for(int i=0; i <= nums.length; i++) {
            missNum = missNum ^ i;    
        }
        return missNum;
    }
